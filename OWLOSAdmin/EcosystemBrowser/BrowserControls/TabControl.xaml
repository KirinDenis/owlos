<UserControl x:Class="OWLOSThingsManager.EcosystemBrowser.BrowserControls.TabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OWLOSThingsManager.EcosystemBrowser.BrowserControls"
             mc:Ignorable="d" 
             Margin="2,0"
             VerticalAlignment="Bottom"
             Height="25" d:DesignWidth="800" 
             Background="#FF3B4F81" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" MouseDown="NameTextBlock_MouseDown">
    <Grid Margin="5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="NameTextBlock" Text="123" VerticalAlignment="Center" Foreground="White" />
        <TextBlock x:Name="CloseButton" Grid.Column="1" Text="X" Foreground="#FFFFE0AC" Background="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center" PreviewMouseDown="CloseButton_PreviewMouseDown"/>
    </Grid>
</UserControl>
