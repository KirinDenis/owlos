<UserControl x:Class="OWLOSThingsManager.EcosystemBrowser.BrowserControls.QueryIntervalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OWLOSThingsManager.EcosystemBrowser.BrowserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid Margin="12,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="NameCheckBox" Content="Get all drivers properties" Grid.ColumnSpan="3" VerticalAlignment="Center" Checked="NameCheckBox_Checked" Unchecked="NameCheckBox_Unchecked"/>
        <TextBox x:Name="IntervalTextBox" Text="123" Grid.Column="1" VerticalAlignment="Center" Margin="5,0" TextChanged="IntervalTextBox_TextChanged"/>
        <TextBlock Text="sec." Grid.Column="2" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
