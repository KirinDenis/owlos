<UserControl x:Class="OWLOSAdmin.EcosystemBrowser.BrowserControls.ThingsListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OWLOSAdmin.EcosystemBrowser.BrowserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFE7E8EC">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="NewConnectionButton" Content="Add" Margin="5" Click="NewConnectionButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
        <StackPanel x:Name="ThingsListStackPanel" Orientation="Vertical"  Margin="10" >

        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
