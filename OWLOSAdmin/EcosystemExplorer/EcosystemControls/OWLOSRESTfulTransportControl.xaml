<UserControl x:Class="OWLOSAdmin.EcosystemExplorer.EcosystemControls.OWLOSRESTfulTransportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OWLOSAdmin.EcosystemExplorer.EcosystemControls"
             mc:Ignorable="d" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name" Grid.Row="0" VerticalAlignment="Center" ></TextBlock>
        <TextBlock Text="URL" Grid.Row="1" VerticalAlignment="Center" ></TextBlock>
        <TextBlock Text="Port" Grid.Row="2" VerticalAlignment="Center" ></TextBlock>

        <TextBox x:Name="NameText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" ></TextBox>
        <TextBox x:Name="URLText" Grid.Row="1" Grid.Column="1"  VerticalAlignment="Center" ></TextBox>
        <TextBox x:Name="PortText" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" ></TextBox>

        <Button x:Name="Button" Content="apply" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Width="50"></Button>

    </Grid>
</UserControl>
