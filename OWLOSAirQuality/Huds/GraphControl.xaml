             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OWLOSAirQuality.Huds"
             mc:Ignorable="d"              
             Focusable="True" IsTabStop="True" Loaded="UserControl_Loaded">
