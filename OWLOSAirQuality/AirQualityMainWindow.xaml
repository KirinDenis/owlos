<Window x:Class="OWLOSAirQuality.AirQualityMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OWLOSAirQuality"
        mc:Ignorable="d"        
        Title="OWLOS Air Quality" Width="1920" Height="1080" Background="{DynamicResource OWLOSDark}" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <!-- FontFamily="file:///D:\Users\Egor\source\repos\KirinDenis\owlos\OWLOSAdmin\Fonts\#omega flight" -->
    <Grid>
        <TextBlock x:Name="text" TextWrapping="WrapWithOverflow"/>

        <Viewbox x:Name="MainViewBox">

            <Grid x:Name="MainGrid"  Width="1920" Height="1080">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Grid x:Name="ConsoleGrid" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" >
                </Grid>


                <WrapPanel x:Name="ValuesGrid" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3"></WrapPanel>


                <Grid x:Name="HudGrid" Grid.Column="1" Grid.Row="1">
                    <Grid x:Name="WeatherGrid" RenderTransformOrigin="0.5,0.5">
                    </Grid>
                    <Grid x:Name="DateTimeGrid" RenderTransformOrigin="0.5,0.5">
                    </Grid>
                </Grid>

            </Grid>
        </Viewbox>

    </Grid>
</Window>
